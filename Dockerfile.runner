# Runner + pipeline image with Playwright/Chromium for PDF export.
# Also includes Claude Code CLI for parallel JD extraction.
FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Pre-download sentence-transformers model to this location during build
ENV SENTENCE_TRANSFORMERS_HOME=/app/.cache/sentence_transformers

WORKDIR /app

# System deps for Playwright/Chromium + Node.js for Claude Code CLI
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        curl \
        ca-certificates \
        gnupg \
        libnss3 \
        libatk-bridge2.0-0 \
        libgtk-3-0 \
        libxkbcommon0 \
        libdrm2 \
        libxcomposite1 \
        libxdamage1 \
        libxfixes3 \
        libxrandr2 \
        libgbm1 \
        libpango-1.0-0 \
        libcairo2 \
        libasound2 \
        fonts-liberation \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 20.x for Claude Code CLI
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Install Claude Code CLI globally
# Uses Max subscription auth via CLAUDE_CODE_OAUTH_TOKEN env var
# Generate token with: claude setup-token (valid for 1 year)
RUN npm install -g @anthropic-ai/claude-code

# Create non-root user for Claude CLI security
# Claude CLI refuses --dangerously-skip-permissions when running as root
RUN useradd -m -u 1000 runner \
    && mkdir -p /home/runner/.claude \
    && chown -R runner:runner /home/runner

COPY requirements.txt requirements-ml.txt ./

# Install CPU-only PyTorch FIRST to prevent CUDA version from being pulled
# This saves ~3GB of unnecessary NVIDIA CUDA libraries since VPS has no GPU
# CPU PyTorch: ~200MB vs CUDA PyTorch: ~900MB + ~2.6GB CUDA libs
RUN pip install --no-cache-dir torch --index-url https://download.pytorch.org/whl/cpu

# Install core requirements + ML requirements (sentence-transformers for annotation embeddings)
RUN pip install --no-cache-dir -r requirements.txt \
    && pip install --no-cache-dir -r requirements-ml.txt \
    && pip install --no-cache-dir playwright \
    && python -m playwright install --with-deps chromium

# Pre-download sentence-transformers model (~80MB) to eliminate first-run latency
# Model is used by annotation suggestion system for semantic matching
RUN python -c "from sentence_transformers import SentenceTransformer; SentenceTransformer('all-MiniLM-L6-v2')"

COPY . .

# Set ownership for app directory so runner user can write logs/artifacts
RUN chown -R runner:runner /app

# Switch to non-root user for Claude CLI compatibility
USER runner

EXPOSE 8000

CMD ["uvicorn", "runner_service.app:app", "--host", "0.0.0.0", "--port", "8000", "--ws-ping-interval", "20", "--ws-ping-timeout", "30"]
