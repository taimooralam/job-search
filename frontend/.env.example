# Job Search UI Configuration
# Copy this to .env and fill in your values

# MongoDB connection string
# The UI uses the 'jobs' database and 'level-2' collection
MONGODB_URI=mongodb://localhost:27017/jobs

# Flask configuration (optional)
FLASK_PORT=5000
FLASK_DEBUG=true
FLASK_ENV=development

# Authentication (required for security)
# Generate a secure random key: python -c "import os; print(os.urandom(24).hex())"
FLASK_SECRET_KEY=your-secret-key-here-change-in-production
# Set a strong password for accessing the UI
LOGIN_PASSWORD=your-password-here

# VPS Runner Integration (required for pipeline processing and PDF generation)
# URL of the runner service (VPS deployment at port 8000)
RUNNER_URL=http://72.61.92.76:8000

# API secret for authenticating with runner service (CRITICAL - MUST MATCH VPS)
# This MUST be the same value as RUNNER_API_SECRET on the VPS runner service
# Generate with: openssl rand -hex 32
# WITHOUT THIS: PDF export will fail with 401 Unauthorized error
RUNNER_API_SECRET=your-runner-api-secret-here-change-me

# VERCEL DEPLOYMENT CHECKLIST:
# 1. Go to Vercel Dashboard → Settings → Environment Variables
# 2. Add RUNNER_API_SECRET with the SAME value as your VPS .env file
# 3. Add to all environments (Production, Preview, Development)
# 4. Redeploy frontend after adding the variable

# ============================================================
# AUTOMATED JOB INGESTION CONFIGURATION
# ============================================================
# Run cron: 0 */6 * * * .venv/bin/python scripts/ingest_jobs_cron.py

# Enable/disable auto-ingestion (default: true)
AUTO_INGEST_ENABLED=true

# Minimum quick_score for auto-ingestion (0-100, default: 70 = Tier B+)
AUTO_INGEST_SCORE_THRESHOLD=70

# Max jobs to fetch per source per search config (default: 50)
AUTO_INGEST_RESULTS_PER_SOURCE=50

# INDEED CONFIGURATION (via JobSpy)
# Comma-separated job titles/keywords to search
INDEED_SEARCH_TERMS=engineering manager,staff engineer,technical lead,director of engineering
# Comma-separated locations (leave empty for no location filter)
INDEED_LOCATIONS=Remote,San Francisco,New York
# Country code for Indeed (default: USA)
INDEED_COUNTRY=USA
# Only fetch jobs posted within N hours (optional, comment out for no limit)
# INDEED_HOURS_OLD=72

# HIMALAYAS CONFIGURATION (remote jobs API)
# Comma-separated keywords to filter jobs (matches title/description)
HIMALAYAS_KEYWORDS=engineering,python,machine learning,data,software
# Max results to fetch (default: 100)
HIMALAYAS_MAX_RESULTS=100
# Only include jobs available worldwide (default: false)
HIMALAYAS_WORLDWIDE_ONLY=false