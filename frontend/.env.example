# Job Search UI Configuration
# Copy this to .env and fill in your values

# MongoDB connection string
# The UI uses the 'jobs' database and 'level-2' collection
MONGODB_URI=mongodb://localhost:27017/jobs

# Flask configuration (optional)
FLASK_PORT=5000
FLASK_DEBUG=true
FLASK_ENV=development

# Authentication (required for security)
# Generate a secure random key: python -c "import os; print(os.urandom(24).hex())"
FLASK_SECRET_KEY=your-secret-key-here-change-in-production
# Set a strong password for accessing the UI
LOGIN_PASSWORD=your-password-here

# VPS Runner Integration (required for pipeline processing)
# URL of the runner service (VPS deployment)
RUNNER_URL=http://72.61.92.76:8000
# API secret for authenticating with runner service (must match VPS RUNNER_API_SECRET)
RUNNER_API_SECRET=your-runner-api-secret-here